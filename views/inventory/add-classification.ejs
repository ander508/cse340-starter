<% if (title) { %>
<h1 class="title"><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>


<form action="/inv/addClassification" class="login-form" method="post">

    <div class="input">
        <label for="classification_name">Classification Name</label>
        <input type="text" name="classification_name" id="classification_name" required
       pattern="^[A-Z][A-Za-z]*$" value="<%= locals.classification_name %>">
    </div>
    <div class="pwordReq">Must start with a capital letter and contain only letters (no spaces, numbers, or special characters).
      </div>
    <button class="button" type="submit">Add Classification</button>





</form>