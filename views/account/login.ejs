<% if (title) { %>
<h1 class="title"><%= title %></h1>
<%- messages() %>
<% } else {
  res.redirect('/')
} %>

<form action="/submit.js" class="login-form">
    <div class="input email">
        <label for="account_email" >
        Username</label>
        <input type="email" name="account_email" id="account_email" required>
    </div>
    <div class="input password">
        <label for="account_password" >
        Password</label>
        <input type="password" name="account_password" id="account_password" required
        pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
      <div class="pwordReq">Passwords must be at least 12 
        characters and contain at least 1 number, 
        1 capital letter and 1 special character 
      </div>
    </div>

     <span id="pswBtn">Show Password</span>
    
    <button type="submit" class="button">Login</button>

</form>
    <div class="sign-up">No account? <a href="/account/register">Sign-up</a></div>
