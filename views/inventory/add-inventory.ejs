<% if (title) { %>
<h1 class="title"><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>


<form action="/inv/addInventory" class="login-form" method="post">

<div class="input select">
    <label for="classificationList">Classification</label>
      <%- classificationSelect %>

</div>

<div class="input">
    <label for="inv_make">Make</label>
    <input type="text" name="inv_make" id="inv_make" required
    pattern="^[A-Za-z][^\s]{2,}$" placeholder="Min of 3 characters" <% if(locals.inv_make) { %> value="<%= locals.inv_make %>" <% } %>>
</div>
<div class="input">
    <label for="inv_model">Model</label>
    <input type="text" name="inv_model" id="inv_model" required
    pattern="^[A-Za-z][^\s]{2,}$" placeholder="Min of 3 characters" <% if(locals.inv_model) { %> value="<%= locals.inv_model %>" <% } %>>
</div>
<div class="input">
    <label for="inv_year">Year</label>
    <input type="text" name="inv_year" id="inv_year" size="10" placeholder="4-digit year" required
    minlength="4" maxlength="4" pattern="^(19|20)\d{2}$" <% if(locals.inv_year) { %> value="<%= locals.inv_year %>" <% } %>>
</div>
<div class="input">
    <label for="inv_description">Description</label>
    <textarea name="inv_description" id="inv_description" required><% if(locals.inv_description) { %><%= locals.inv_description %><% } %></textarea>
</div>
<div class="input">
    <label for="inv_image">Image Path</label>
    <input type="text" name="inv_image" id="inv_image" size="30" required <% if(locals.inv_image) { %> value="<%= locals.inv_image %>" <% } else { %> value="/images/vehicles/no-image.png" <% } %>>
</div>
<div class="input">
    <label for="inv_thumbnail">Thumbnail Path</label>
    <input type="text" name="inv_thumbnail" id="inv_thumbnail" size="30" required <% if(locals.inv_image) { %> value="<%= locals.inv_image %>" <% } else { %> value="/images/vehicles/no-image.png" <% } %>>
</div>
<div class="input">
    <label for="inv_price">Price</label>
    <input type="text" name="inv_price" id="inv_price" size="10" placeholder="Use decimal or integer numbers only" required
     pattern="^[1-9]\d*(\.\d+)?$" <% if(locals.inv_price) { %> value="<%= locals.inv_price %>" <% } %>>
</div>
<div class="input">
    <label for="inv_miles">Miles</label>
    <input type="text" name="inv_miles" id="inv_miles" size="10" placeholder="digits only" required
    pattern="^\d+$">
</div>
<div class="input">
    <label for="inv_color">Color</label>
    <input type="text" name="inv_color" id="inv_color" required <% if(locals.inv_color) { %> value="<%= locals.inv_color %>" <% } %>>
</div>

    <button class="button" type="submit">Add Vehicle</button>

</form>